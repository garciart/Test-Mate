<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TestMate.SettingsPage"
             xmlns:local="clr-namespace:TestMate"
             Title="Settings...">
    <ContentPage.Content>
        <StackLayout Padding="10" VerticalOptions="Center">
            <Label Text="{x:Static local:Resources.AppResources.settingsTitleLabelText}" HorizontalTextAlignment="Center" HorizontalOptions="Center" />
            <Button x:Name="switchLanguageButton" Text="{x:Static local:Resources.AppResources.swtichLanguageButtonText}" StyleClass="button" Clicked="SwitchLanguageButton_Clicked" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>