<?xml version="1.0" encoding="utf-8" ?>
<!-- Get ContentPage title from resx file -->
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TestMate.SettingsPage"
             xmlns:local="clr-namespace:TestMate"
             Title="{x:Static local:Resources.AppResources.settingsTitle}">
    <ContentPage.Padding>
        <OnPlatform x:TypeArguments="Thickness" iOS="0,20,0,0" />
    </ContentPage.Padding>
    <ContentPage.Content>
        <ScrollView>
            <StackLayout Padding="10" VerticalOptions="Center">
                <Label Text="{x:Static local:Resources.AppResources.settingsTitle}" HorizontalTextAlignment="Center" HorizontalOptions="Center" />
                <Label Text="{x:Static local:Resources.AppResources.settingsQuestionOrder}" />
                <StackLayout Orientation="Horizontal" HorizontalOptions="Start">
                    <Picker x:Name="picker1" Title="Question Order:">
                        <Picker.ItemsSource>
                            <x:Array Type="{x:Type x:String}">
                                <x:String>Baboon</x:String>
                                <x:String>Capuchin Monkey</x:String>
                                <x:String>Blue Monkey</x:String>
                            </x:Array>
                        </Picker.ItemsSource>
                    </Picker>
                </StackLayout>
                <Label Text="{x:Static local:Resources.AppResources.settingsKeyTermsDisplay}" />
                <StackLayout Orientation="Horizontal" HorizontalOptions="Start">
                    <Picker x:Name="picker2" Title="Displaying Key Terms:">
                        <Picker.ItemsSource>
                            <x:Array Type="{x:Type x:String}">
                                <x:String>Baboon</x:String>
                                <x:String>Capuchin Monkey</x:String>
                                <x:String>Blue Monkey</x:String>
                            </x:Array>
                        </Picker.ItemsSource>
                    </Picker>
                </StackLayout>
                <Label Text="{x:Static local:Resources.AppResources.settingsProvideFeedback}" />
                <StackLayout Orientation="Horizontal" HorizontalOptions="Start">
                    <Picker x:Name="picker3" Title="Provide Feedback:">
                        <Picker.ItemsSource>
                            <x:Array Type="{x:Type x:String}">
                                <x:String>Baboon</x:String>
                                <x:String>Capuchin Monkey</x:String>
                                <x:String>Blue Monkey</x:String>
                                </x:Array>
                            </Picker.ItemsSource>
                    </Picker>
                </StackLayout>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>