<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TestMate.DownloadPage"
             xmlns:local="clr-namespace:TestMate"
             Title="{x:Static local:Resources.AppResources.DownloadTitle}">
    <ContentPage.Padding>
        <OnPlatform x:TypeArguments="Thickness" iOS="0,20,0,0" />
    </ContentPage.Padding>
    <ContentPage.Content>
        <StackLayout Padding="10">
            <Label x:Name="QuestionLabel" />
            <ListView x:Name="ListView1" />
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Button x:Name="ReviewButton" Text="Review" StyleClass="button" Clicked="ReviewButton_Clicked" />
                <Button x:Name="QuitButton" Text="Quit" StyleClass="button" Clicked="QuitButton_Clicked" Grid.Column="1" />
                <Button x:Name="SubmitButton" Text="Submit" StyleClass="button" Clicked="SubmitButton_Clicked" Grid.Column="2" />                
            </Grid>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>