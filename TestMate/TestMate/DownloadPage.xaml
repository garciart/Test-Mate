<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TestMate.DownloadPage"
             xmlns:local="clr-namespace:TestMate"
             Title="{x:Static local:Resources.AppResources.DownloadTitle}">
    <ContentPage.Padding>
        <OnPlatform x:TypeArguments="Thickness" iOS="0,20,0,0" />
    </ContentPage.Padding>
    <ContentPage.Content>
        <StackLayout Padding="10" x:Name="TestDirectory">
            <Label Text="{x:Static local:Resources.AppResources.DownloadLabel}" StyleClass="h1" HorizontalTextAlignment="Center" HorizontalOptions="Center" />
            <ListView x:Name="TestList" ItemSelected="TestList_ItemSelected" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>