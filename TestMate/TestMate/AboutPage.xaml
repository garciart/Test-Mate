<?xml version="1.0" encoding="utf-8" ?>
<!-- Get ContentPage title from resx file -->
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TestMate.AboutPage"
             xmlns:local="clr-namespace:TestMate"
             Title="{x:Static local:Resources.AppResources.aboutButtonText}">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout Padding="10">
                <Label Text="{x:Static local:Resources.AppResources.aboutTitleLabelText}" StyleClass="h1" />
                <Label x:Name="copyrightLabel" />
                <BoxView StyleClass="hr" />
                <Label Text="{x:Static local:Resources.AppResources.aboutInfoLabelText}" />
                <BoxView StyleClass="hr" />
                <Label Text="{x:Static local:Resources.AppResources.aboutWarningText}" />
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>