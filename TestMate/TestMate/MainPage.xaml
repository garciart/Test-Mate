<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TestMate.MainPage"
             xmlns:local="clr-namespace:TestMate"
             Title="Test Mate!">
    <ContentPage.Padding>
        <OnPlatform x:TypeArguments="Thickness" iOS="0,20,0,0" />
    </ContentPage.Padding>
    <ContentPage.Content>
        <ScrollView x:Name="mainScrollView">
            <StackLayout Padding="10" VerticalOptions="Center">
                <Label Text="{x:Static local:Resources.AppResources.mainTitle}" StyleClass="h1" HorizontalTextAlignment="Center" HorizontalOptions="Center" />
                <Image x:Name="headerImage" Aspect="AspectFit" HeightRequest="100" />
                <Label Text="{x:Static local:Resources.AppResources.mainSubtitle}" StyleClass="h1" HorizontalTextAlignment="Center" HorizontalOptions="Center" />
                <Button x:Name="startButton" Text="{x:Static local:Resources.AppResources.startTitle}" StyleClass="button" Clicked="StartNewTestButton_Clicked" />
                <Button x:Name="settingsButton" Text="{x:Static local:Resources.AppResources.settingsTitle}" StyleClass="button" Clicked="ChangeSettingsButton_Clicked" />
                <Button x:Name="aboutButton" Text="{x:Static local:Resources.AppResources.aboutTitle}" StyleClass="button" Clicked="AboutTestMateButton_Clicked" />
                <Button x:Name="downloadButton" Text="{x:Static local:Resources.AppResources.downloadButton}" StyleClass="button" Clicked="DownloadTestButton_Clicked" />
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>
